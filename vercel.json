{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/sitemap\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/sitemap-index\\.xml", 
      "dest": "/api/index.js"
    },
    {
      "src": "/rss\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}