{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/sitemap\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/sitemap-index\\.xml", 
      "dest": "/api/index.js"
    },
    {
      "src": "/rss\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}