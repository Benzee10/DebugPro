{
  "version": 2,
  "buildCommand": "node vercel-build.js && vite build --config vite.config.production.ts",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/sitemap\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/sitemap-index\\.xml", 
      "dest": "/api/index.js"
    },
    {
      "src": "/rss\\.xml",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}